{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"**",
			"!**/node_modules",
			"!!**/.svelte-kit",
			"!!**/build",
			"!!**/playwright-report",
			"!!**/test-results",
			"!**/src/lib/wasm"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"linter": {
		"enabled": true,
		"includes": ["**", "!**/*.svelte"],
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error",
				"noUnusedPrivateClassMembers": "error",
				"useExhaustiveDependencies": "warn",
				"noUndeclaredVariables": "error",
				"noUndeclaredDependencies": "warn"
			},
			"style": {
				"useConst": "error",
				"noNonNullAssertion": "error",
				"noInferrableTypes": "off",
				"useTemplate": "warn",
				"useExponentiationOperator": "warn",
				"noUselessElse": "warn",
				"useDefaultParameterLast": "error",
				"useFilenamingConvention": {
					"level": "warn",
					"options": {
						"requireAscii": true,
						"filenameCases": ["camelCase", "PascalCase", "kebab-case"]
					}
				},
				"useFragmentSyntax": "warn"
			},
			"suspicious": {
				"noExplicitAny": "error",
				"noArrayIndexKey": "warn",
				"noAssignInExpressions": "error",
				"noDoubleEquals": "error",
				"noImplicitAnyLet": "error",
				"noConfusingVoidType": "warn",
				"noEmptyBlockStatements": "warn",
				"noConsole": {
					"level": "warn",
					"options": {
						"allow": ["warn", "error", "info", "debug"]
					}
				},
				"noFocusedTests": "error",
				"noSkippedTests": "warn"
			},
			"complexity": {
				"noExcessiveCognitiveComplexity": {
					"level": "warn",
					"options": {
						"maxAllowedComplexity": 15
					}
				},
				"noForEach": "off",
				"useLiteralKeys": "warn",
				"noUselessStringConcat": "warn",
				"noUselessUndefinedInitialization": "warn"
			},
			"performance": {
				"noAccumulatingSpread": "warn",
				"noDelete": "warn",
				"noBarrelFile": "off",
				"noReExportAll": "warn"
			},
			"security": {
				"noDangerouslySetInnerHtml": "error"
			},
			"a11y": {
				"noAriaUnsupportedElements": "error",
				"useAltText": "error",
				"useValidAriaRole": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "always",
			"trailingCommas": "all",
			"arrowParentheses": "always"
		}
	},
	"overrides": [
		{
			"includes": ["**/*.test.ts", "**/*.spec.ts", "**/tests/**/*.ts", "**/__tests__/**/*.ts"],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "warn",
						"noConsole": "off",
						"noFocusedTests": "error",
						"noSkippedTests": "warn"
					},
					"style": {
						"noNonNullAssertion": "off"
					},
					"correctness": {
						"noUnusedVariables": "warn"
					},
					"complexity": {
						"noExcessiveCognitiveComplexity": "off"
					}
				}
			}
		},
		{
			"includes": ["**/database.ts", "**/*.d.ts"],
			"linter": {
				"rules": {
					"style": {
						"useNamingConvention": "off",
						"useFilenamingConvention": "off"
					},
					"correctness": {
						"noUnusedVariables": "off"
					}
				}
			}
		},
		{
			"includes": ["**/index.ts"],
			"linter": {
				"rules": {
					"performance": {
						"noBarrelFile": "off",
						"noReExportAll": "off"
					}
				}
			}
		},
		{
			"includes": [
				"**/stores/**/*.ts",
				"**/stores/**/*.svelte.ts",
				"**/services/**/*.ts",
				"**/services/**/*.svelte.ts"
			],
			"linter": {
				"rules": {
					"suspicious": {
						"noConsole": "off"
					}
				}
			}
		},
		{
			"includes": ["scripts/**/*.mjs", "scripts/**/*.js"],
			"linter": {
				"rules": {
					"suspicious": {
						"noConsole": "off"
					}
				}
			}
		},
		{
			"includes": ["**/tools/**/*.ts"],
			"linter": {
				"rules": {
					"complexity": {
						"noExcessiveCognitiveComplexity": {
							"level": "warn",
							"options": {
								"maxAllowedComplexity": 20
							}
						}
					}
				}
			}
		}
	]
}
