{
  "name": "@dicee/shared",
  "version": "0.1.0",
  "description": "Shared types and schemas for Dicee multiplayer game",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
