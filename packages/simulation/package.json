{
  "name": "@dicee/simulation",
  "version": "0.1.0",
  "description": "AI simulation framework for Dicee - headless game simulations, statistical analysis, and performance calibration",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "sim-run": "./dist/cli/run.js",
    "sim-bench": "./dist/cli/benchmark.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "import": "./dist/schemas/index.js"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "import": "./dist/cli/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "sim:run": "node --import tsx ./src/cli/run.ts",
    "sim:bench": "node --import tsx ./src/cli/benchmark.ts"
  },
  "dependencies": {
    "@dicee/shared": "workspace:*",
    "@dicee/cloudflare-do": "workspace:*",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/node": "^22.10.2",
    "tsx": "^4.19.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  },
  "engines": {
    "node": ">=20"
  }
}
