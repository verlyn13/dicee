{
  "name": "dicee",
  "private": true,
  "type": "module",
 "scripts": {
    "dev": "pnpm --filter @dicee/web dev",
    "dev:do": "cd packages/cloudflare-do && wrangler dev",
    "dev:full": "npx concurrently -n 'do,web' -c 'cyan,magenta' 'pnpm dev:do' 'pnpm dev'",
    "build": "pnpm run build:engine && pnpm --filter @dicee/web build",
    "build:engine": "cd packages/engine && wasm-pack build --target web --out-dir ../web/src/lib/wasm",
    "preview": "pnpm --filter @dicee/web preview",
    "check": "pnpm run check:rust && pnpm run check:web && pnpm run check:do",
    "check:rust": "cd packages/engine && cargo fmt --check && cargo clippy -- -D warnings",
    "check:web": "pnpm --filter @dicee/web check && pnpm --filter @dicee/web biome:check",
    "check:do": "pnpm --filter @dicee/cloudflare-do typecheck",
    "test": "cargo test --manifest-path packages/engine/Cargo.toml",
    "test:all": "pnpm test",
    "lint": "pnpm run lint:rust && pnpm run lint:web",
    "lint:rust": "cd packages/engine && cargo clippy -- -D warnings",
    "lint:web": "pnpm --filter @dicee/web biome:check",
    "format": "pnpm run format:rust && pnpm run format:web",
    "format:rust": "cd packages/engine && cargo fmt",
    "format:web": "pnpm --filter @dicee/web format",
    "web:sync": "pnpm --filter @dicee/web exec svelte-kit sync",
    "web:vitest": "pnpm --filter @dicee/web exec vitest",
    "do:deploy": "cd packages/cloudflare-do && wrangler deploy",
    "do:tail": "cd packages/cloudflare-do && wrangler tail",
    "pages:deploy": "pnpm build && pnpm --filter @dicee/web pages:deploy",
    "pages:deploy:preview": "pnpm build && pnpm --filter @dicee/web pages:deploy:preview",
    "deploy": "pnpm do:deploy && pnpm pages:deploy",
    "akg:discover": "bun run packages/web/src/tools/akg/cli/discover.ts",
    "akg:check": "bun run packages/web/src/tools/akg/cli/check.ts",
    "akg:mermaid": "bun run packages/web/src/tools/akg/cli/mermaid.ts",
    "akg:all": "pnpm akg:discover && pnpm akg:mermaid",
    "akg:test": "bun run packages/web/src/tools/akg/mcp/test-server.ts",
    "audio:list": "bun run packages/web/src/tools/audio-gen/cli/generate.ts --list",
    "audio:status": "bun run packages/web/src/tools/audio-gen/cli/generate.ts --status",
    "audio:gen": "bun run packages/web/src/tools/audio-gen/cli/generate.ts",
    "sim:run": "pnpm --filter @dicee/simulation sim:run",
    "sim:bench": "pnpm --filter @dicee/simulation sim:bench",
    "sim:test": "pnpm --filter @dicee/simulation test",
    "web:analyze-logs": "pnpm --filter @dicee/web analyze-logs",
    "cdp:list": "node packages/web/scripts/cdp-console-monitor.mjs --list",
    "cdp:local": "node packages/web/scripts/cdp-console-monitor.mjs --local",
    "cdp:prod": "node packages/web/scripts/cdp-console-monitor.mjs --production",
    "cdp:monitor": "node packages/web/scripts/cdp-console-monitor.mjs",
    "prepare": "lefthook install || echo 'lefthook not installed'"
  },
  "devDependencies": {
    "@modelcontextprotocol/server-memory": "^2025.11.25",
    "lefthook": "^1.10.10",
    "wasm-pack": "^0.13.1"
  },
  "engines": {
    "node": ">=24",
    "pnpm": ">=10"
  }
}
