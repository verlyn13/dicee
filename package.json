{
  "name": "dicee",
  "private": true,
  "type": "module",
 "scripts": {
    "dev": "pnpm --filter @dicee/web dev",
    "dev:party": "pnpm --filter @dicee/partykit dev",
    "build": "pnpm run build:engine && pnpm --filter @dicee/web build",
    "build:engine": "cd packages/engine && wasm-pack build --target web --out-dir ../web/src/lib/wasm",
    "preview": "pnpm --filter @dicee/web preview",
    "check": "pnpm run check:rust && pnpm run check:web && pnpm run check:party",
    "check:rust": "cd packages/engine && cargo fmt --check && cargo clippy -- -D warnings",
    "check:web": "pnpm --filter @dicee/web check && pnpm --filter @dicee/web biome:check",
    "check:party": "pnpm --filter @dicee/partykit typecheck",
    "test": "cargo test --manifest-path packages/engine/Cargo.toml",
    "test:all": "pnpm test",
    "lint": "pnpm run lint:rust && pnpm run lint:web",
    "lint:rust": "cd packages/engine && cargo clippy -- -D warnings",
    "lint:web": "pnpm --filter @dicee/web biome:check",
    "format": "pnpm run format:rust && pnpm run format:web",
    "format:rust": "cd packages/engine && cargo fmt",
    "format:web": "pnpm --filter @dicee/web format",
    "web:sync": "pnpm --filter @dicee/web exec svelte-kit sync",
    "web:vitest": "pnpm --filter @dicee/web exec vitest",
    "party:deploy": "pnpm --filter @dicee/partykit deploy",
    "party:tail": "pnpm --filter @dicee/partykit tail",
    "akg:discover": "bun run packages/web/src/tools/akg/cli/discover.ts",
    "akg:check": "bun run packages/web/src/tools/akg/cli/check.ts",
    "akg:mermaid": "bun run packages/web/src/tools/akg/cli/mermaid.ts",
    "akg:all": "pnpm akg:discover && pnpm akg:mermaid",
    "prepare": "lefthook install || echo 'lefthook not installed'"
  },
  "devDependencies": {
    "@modelcontextprotocol/server-memory": "^2025.11.25",
    "lefthook": "^1.10.10",
    "wasm-pack": "^0.13.1"
  },
  "engines": {
    "node": ">=24",
    "pnpm": ">=10"
  }
}
